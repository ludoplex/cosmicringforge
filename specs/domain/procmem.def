// procmem.def — Process Memory API X-Macros
// Format: Direct X-macro tables for #include expansion
//
// @version 1.0.0
// Usage: #define X(name, val, str) ... then #include "procmem.def"

// ════════════════════════════════════════════════════════════════════════════
// Memory Access Flags - MEMACCESS_XMACRO(X)
// X(name, value, string)
// ════════════════════════════════════════════════════════════════════════════

#ifndef MEMACCESS_XMACRO
#define MEMACCESS_XMACRO(X) \
    X(PROCMEM_READ,    0x01, "READ")    \
    X(PROCMEM_WRITE,   0x02, "WRITE")   \
    X(PROCMEM_EXECUTE, 0x04, "EXECUTE")
#endif

// ════════════════════════════════════════════════════════════════════════════
// Operating System - PROCMEM_OS_XMACRO(X)
// X(name, value, string)
// ════════════════════════════════════════════════════════════════════════════

#ifndef PROCMEM_OS_XMACRO
#define PROCMEM_OS_XMACRO(X) \
    X(PROCMEM_OS_UNKNOWN, 0, "unknown") \
    X(PROCMEM_OS_LINUX,   1, "linux")   \
    X(PROCMEM_OS_WINDOWS, 2, "windows") \
    X(PROCMEM_OS_MACOS,   3, "macos")   \
    X(PROCMEM_OS_BSD,     4, "bsd")
#endif

