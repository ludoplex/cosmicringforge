// lexer.def â€” X-Macro Lexer Specification Format
// Defines the lexgen input format using X-macros

// Token kinds
// TOK_KIND(name, skip, doc)
TOK_KIND(keyword,    0, "Reserved keyword (exact match)")
TOK_KIND(operator,   0, "Operator or punctuation")
TOK_KIND(literal,    0, "Literal value (number, string)")
TOK_KIND(identifier, 0, "User identifier")
TOK_KIND(whitespace, 1, "Whitespace (skipped)")
TOK_KIND(comment,    1, "Comment (skipped)")

// Lexer directives
// LEX_DIRECTIVE(name, doc)
LEX_DIRECTIVE(skip, "Skip this token type")

// Pattern types
// LEX_PATTERN(name, syntax, doc)
LEX_PATTERN(exact,  "\"literal\"",        "Exact string match")
LEX_PATTERN(class,  "[a-z0-9]",           "Character class")
LEX_PATTERN(regex,  "[a-z][a-z0-9_]*",    "Pattern with quantifiers")

// Generated code elements
// LEX_GEN(element, type, doc)
LEX_GEN(token_enum,    enum,   "Token type enumeration")
LEX_GEN(token_struct,  struct, "Token with type, start, length, position")
LEX_GEN(lexer_struct,  struct, "Lexer state (source, current, line, col)")
LEX_GEN(init_func,     func,   "Initialize lexer with source")
LEX_GEN(next_func,     func,   "Get next token from source")
LEX_GEN(name_func,     func,   "Get token type name string")
