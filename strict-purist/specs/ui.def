// ui.def â€” X-Macro UI Specification Format
// Defines the uigen input format using X-macros

// UI element types
// UI_ELEMENT(name, nuklear_func, doc)
UI_ELEMENT(window,   nk_begin/nk_end,        "Top-level window")
UI_ELEMENT(panel,    nk_layout_*,            "Layout container")
UI_ELEMENT(button,   nk_button_label,        "Click button")
UI_ELEMENT(label,    nk_label,               "Text label")
UI_ELEMENT(slider,   nk_slider_float,        "Numeric slider")
UI_ELEMENT(checkbox, nk_checkbox_label,      "Boolean checkbox")
UI_ELEMENT(textbox,  nk_edit_string,         "Text input field")
UI_ELEMENT(combo,    nk_combo,               "Dropdown selection")
UI_ELEMENT(progress, nk_progress,            "Progress bar")
UI_ELEMENT(image,    nk_image,               "Image display")

// Layout types
// UI_LAYOUT(name, nuklear_func, doc)
UI_LAYOUT(vertical,   nk_layout_row_dynamic, "Stack vertically")
UI_LAYOUT(horizontal, nk_layout_row_static,  "Arrange horizontally")
UI_LAYOUT(grid,       nk_layout_row_begin,   "Grid arrangement")

// Event bindings
// UI_EVENT(name, syntax, doc)
UI_EVENT(on_click,  "on_click: handler",    "Click event handler")
UI_EVENT(on_change, "on_change: handler",   "Value change handler")
UI_EVENT(bind,      "bind: state.field",    "Two-way data binding")

// Generated code elements
// UI_GEN(element, type, doc)
UI_GEN(window_enum, enum,   "Window ID enumeration")
UI_GEN(state_struct,struct, "UI state with bound values")
UI_GEN(init_func,   func,   "Initialize UI state")
UI_GEN(render_func, func,   "Render UI frame")
